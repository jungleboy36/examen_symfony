{# templates/article/index.html.twig #}
{% extends 'base.html.twig' %}
{%block body %}
{% if articles %}
<a href="{{ path('new_article')}}" class="btn btn-dark">Ajouter article</a>
<table id="articles" class="table table-striped">
  <thead>
    <tr>
      <th>titre</th>
      <th>contenu</th>
      <th>Date publication</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    {% for article in articles %}
      <tr>
        <td>{{ article.titre }}</td>
        <td>{{ article.contenu }}</td>
         <td>{{ article.datepub|date('d-m-Y')}}</td>
         <td>
            <a href="/article/edit/{{ article.id }}" class="btn btn-dark">Modifier</a>
            <a href="/article/delete/{{ article.id }}" class="btn btn-danger" 
            onclick="return confirm('Etes-vous sÃ»r de supprimer cet article?');">Supprimer</a>
          </td>
      </tr>
    {% endfor %}
  </tbody>
</table>
{% else %}
<p>Aucun articles</p>
{% endif %} 
{% endblock %}
 